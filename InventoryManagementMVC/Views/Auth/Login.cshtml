@{
    Layout = null;
}
@model InventoryManagementMVC.Models.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <style>
        .login-container {
            border: 3px solid brown;
            padding: 50px;
            border-radius: 5px;
            background: #f3b791;
            box-shadow: 2px 2px 15px #df9d9d;
        }

        .login-btn {
            background: brown !important;
            border-color: brown !important;
        }
    </style>

    <script>
        let loginMessage = "@ViewBag.Message";

        if (loginMessage != "") {
            alert(loginMessage);
        }

        function ValidateLoginForm() {
            if (document.getElementById("UserName").value == "" || document.getElementById("Password").value == "") {
                alert("Input Needed");
                return false;
            }
            return true;
        }
    </script>
</head>
<body>
    <div style="
         height: 100vh;
         width: 100%;
         display: flex;
         justify-content: center;
         align-items: center;">
        <div class="login-container">
            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                <div class="row" style="width: 450px;">
                    <h2 class="text-center mb-4">Inventory Management Login</h2>
                    <div class="col-md-12">
                        <label for="UserName" class="form-label" style="font-weight: 600;">User Name</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "UserName" })
                    </div>
                    <div class="col-md-12 mt-2">
                        <label for="Password" class="form-label" style="font-weight: 600;">Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "Password", @type = "password" })
                    </div>
                    <div class="col-md-12 d-grid">
                        <input type="submit" class="btn btn-primary login-btn mt-4" value="Login" onclick="return ValidateLoginForm()" />
                    </div>

                </div>
            }
        </div>
    </div>
</body>
</html>
