@{
    Layout = null;
}
@model InventoryManagementMVC.Models.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            <div>
                <div>
                    User Name
                    @Html.TextBoxFor(m => m.UserName)
                </div>
                <div>
                    Password
                    @Html.TextBoxFor(m => m.Password)
                </div>
            </div>
        }
    </div>
</body>
</html>
